<div id="<%= dom_id location %>">
  <p>
    <strong>Title:</strong>
    <%= location.title %>
  </p>

  <p>
    <strong>By <%= location.user.email %></strong>
  </p>

  <p>
    <strong>Body:</strong>
    <%= location.body %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= location.image %>
    <%= image_tag "#{location.image}" %>

  </p>

</div>
