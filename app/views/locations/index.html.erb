<% if current_user.id ==1 %>
<h1>All Blog Posts</h1>

<div id="locations">
  <% @locations.each do |location| %>
    <%= render location %>
    <p>
      <%= link_to "Show this location", location %>
    </p>
  <% end %>
</div>

<%= link_to "New location", new_location_path %>

<% else %>
<div>
  <h1>ACCESS DENIED</h1>
</div>

<% end %>