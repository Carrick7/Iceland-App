<% if current_user %>


   <button type="button" class="btn btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="account_nav">
              Account
            </button>
    <ul class="dropdown-menu" id="log_out">
     <li class='dropdown_links'>
       <%= button_to "Log Out", destroy_user_session_path, class: "dropdown-item", id:"button_log_out", method: :delete %>
     </li>   
    </ul>

  <% else %>
  <button type="button" class="btn btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="account_nav">
              Account
            </button>
    <ul class="dropdown-menu" id="sign_log_in">
     <li class='dropdown_links'>
       <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item", class: "account_nav_links" %>
     </li> 
     <li class='dropdown_links'>
       <%= link_to "Login", new_user_session_path, class: "dropdown-item", class: "account_nav_links"%>
     </li> 
    </ul>
  <% end %>

  